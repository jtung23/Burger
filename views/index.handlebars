<h1>Eat a Burger</h1>

<h2>Your burgrs</h2>
<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{burger}}
    {{/unless}}
  {{/each}}
</ul>

<h3>Devoured Burgers</h3>
<ul>
  {{#each burger}}
    {{#if devoured}}
      {{burger}}
    {{/if}}
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>